<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <!-- Tab Sections Item Text -->
    <style name="AppTabItemText">
        <item name="android:textSize">14.0dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">46dip</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:layout_marginLeft">8dip</item>
        <item name="android:layout_marginRight">8dip</item>
        <item name="android:background">@drawable/tv_grid_sections</item>
        <item name="android:textColor">@color/tv_grid_sections</item>
    </style>

    <style name="MainTabBottom">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/main_tab_button_color</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/tabs_btn_bg</item>
        <item name="android:paddingTop">8.0dip</item>
        <item name="android:paddingBottom">4.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">0.0dip</item>
        <item name="android:layout_marginBottom">0.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">5.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="LayoutTitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:background">#ff292f3c</item>
    </style>

    <style name="ButtonArrow">
        <item name="android:layout_width">48dip</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:layout_margin">10dip</item>
        <item name="android:background">@drawable/main_btn_tab_arrow</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="TextPersonProfile">
        <item name="android:textSize">15.0sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#ff4a4a4a</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextPersonItem">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">#ff4a4a4a</item>
    </style>

    <style name="ButtonTitleBarBack">
        <item name="android:layout_width">48dip</item>
        <item name="android:layout_height">48dip</item>
    </style>

</resources>
