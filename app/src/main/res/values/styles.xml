<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="MainTabBottom">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/main_tab_button_color</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/tabs_btn_bg</item>
        <item name="android:paddingTop">8.0dip</item>
        <item name="android:paddingBottom">3.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">0.0dip</item>
        <item name="android:layout_marginBottom">0.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="LayoutTitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#ff2196F3</item>
    </style>

    <style name="MainTopSectionArrow">
        <item name="android:layout_width">16dip</item>
        <item name="android:layout_height">16dip</item>
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:layout_marginLeft">12dip</item>
        <item name="android:layout_marginRight">12dip</item>
        <item name="android:background">@drawable/main_top_section_arrow</item>
    </style>

    <style name="PanelLayoutSections">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#ff2196F3</item>
    </style>

    <style name="LayoutMainSectionGrid">

    </style>

    <style name="TextViewMainSectionListItem">
        <item name="android:textSize">15.0dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">72dip</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_marginTop">6dip</item>
        <item name="android:layout_marginLeft">6dip</item>
        <item name="android:layout_marginRight">0dip</item>
        <item name="android:background">@drawable/text_main_section_grid</item>
        <item name="android:textColor">@color/text_main_section_grid</item>
    </style>

    <style name="TextViewMainSectionGridItem" parent="TextViewMainSectionListItem">

    </style>

    <style name="TextPersonProfile">
        <item name="android:textSize">15.0sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#ff4a4a4a</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextPersonItem">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">#ff4a4a4a</item>
    </style>

    <style name="ButtonTitleBarBack">
        <item name="android:layout_width">48dip</item>
        <item name="android:layout_height">48dip</item>
    </style>

    <style name="LayoutMainTopSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:background">#fffafafa</item>
    </style>

    <style name="DragGridSectionTop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">0dip</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:numColumns">4</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:verticalSpacing">5dip</item>
        <item name="android:background">#ffffffff</item>
    </style>

    <style name="DragGridSectionBottom" parent="DragGridSectionTop">
        <item name="android:background">#fff8f8f8</item>
    </style>

</resources>
